<UserControl x:Class="ClubModule.ClubView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="{DynamicResource WarmBlue}">
    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/CommonLibrary;component/Resources/Colors.xaml"/>
    </UserControl.Resources>

    <Grid HorizontalAlignment="Center" Margin="20">
        <TextBlock Text="{Binding Club.Name}" FontWeight="Bold"/>
    </Grid>
    
</UserControl>
