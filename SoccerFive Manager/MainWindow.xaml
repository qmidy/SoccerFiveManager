<Window x:Class="Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Main"
        Title="MainWindow" Height="600" Width="800">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Name="TopBanner" Height="50"/>
            <RowDefinition Name="ContentView" Height="*"/>
            <RowDefinition Name="BottomBanner" Height="50"/>
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" Fill="AliceBlue"/>
        <ContentPresenter Grid.Row="1" Content="{Binding Path=MainContent}"/>
        <Rectangle Grid.Row="2" Fill="AntiqueWhite"/>
    </Grid>
</Window>
