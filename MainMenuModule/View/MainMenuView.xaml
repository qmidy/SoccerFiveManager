<UserControl x:Class="MainMenuModule.MainMenuView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/CommonLibrary;component/Resources/Colors.xaml"/>
    </UserControl.Resources>
    <Grid Background="{DynamicResource MiddleFadeClearGreen}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Click="NewGameClick" Width="100" Height="50"> Nouvelle Partie </Button>
        <Button Grid.Column="1" Width="100" Height="50"> Charger Partie </Button>

    </Grid>
</UserControl>
